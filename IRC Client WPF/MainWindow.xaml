<Window x:Class="IRC_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="551" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="272*"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="ChatWindow" HorizontalAlignment="Left" Height="324" VerticalAlignment="Top" Width="404" Margin="10,10,0,0" Grid.RowSpan="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="InputBox" HorizontalAlignment="Left" Height="20" Margin="10,242,0,0" VerticalAlignment="Top" Width="443" SpellCheck.IsEnabled="True" Grid.Row="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="458,242,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
        <ListView x:Name="NickList" HorizontalAlignment="Left" Height="324" Margin="419,10,0,0" VerticalAlignment="Top" Width="114" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
