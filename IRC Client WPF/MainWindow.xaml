<Window x:Class="IRC_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="553.266" Closing="Window_Closing">
    <Grid>
        <RichTextBox x:Name="InputBox" Margin="10,0,92,10" SpellCheck.IsEnabled="True" Height="20" VerticalAlignment="Bottom" KeyUp="InputBox_KeyUp">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListView x:Name="NickList" Margin="0,10,10,35" HorizontalAlignment="Right" Width="114">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <RichTextBox x:Name="ChatBox" Margin="10,10,129,35" VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>

                </Style>
            </RichTextBox.Resources>
            <FlowDocument IsEnabled="False">
                <Paragraph/>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="SendButton" Content="Send" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="SendButton_Click"/>
    </Grid>
</Window>
